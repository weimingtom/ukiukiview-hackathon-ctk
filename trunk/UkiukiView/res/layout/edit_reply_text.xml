<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layoutEditComment"
	android:padding="2dip"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="center_horizontal"
	>
	<LinearLayout
		android:padding="0dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<ImageButton android:id="@+id/imageButtonEmotion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/joy"
			android:padding="4dip"
			/>
		<LinearLayout
			android:padding="4dip"
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			>
			<LinearLayout
				android:padding="0dip"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>
				<TextView android:id="@+id/textNickname"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dip"
					android:textSize="18sp"
					android:text="unknown"
					android:ellipsize="end"
					/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<EditText android:id="@+id/textDescription"
		style="@style/EditOriginal"
		android:layout_width="260dip"
		android:layout_height="80dip"
		android:padding="4dip"
		android:textSize="16sp"
		android:maxLength="120"
		android:gravity="left|top"
		android:text=""
		/>
	<LinearLayout
		android:padding="4dip"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|bottom"
		>
		<Button android:id="@+id/btnOk"
			style="@style/ButtonOriginal"
			android:layout_width="120dip"
			android:layout_height="wrap_content"
			android:text="@string/edit_text_reply"
			/>
		<Button android:id="@+id/btnCancel"
			style="@style/ButtonOriginal"
			android:layout_width="120dip"
			android:layout_height="wrap_content"
			android:text="@string/cancel"
			/>
	</LinearLayout>
</LinearLayout>
